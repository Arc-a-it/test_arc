[
  {
    "id": "resource-exhaustion-risk",
    "system": "performance",
    "description": "Detect resource exhaustion patterns",
    "severity": "risk",
    "scope": { "files": ["**/*.js", "**/*.ts"] },
    "rule": {
      "type": "pattern",
      "condition": {
        "pattern": "for.*100|CONNECTION_POOL.*set"
      },
      "message": "Resource exhaustion risk detected"
    }
  },
  {
    "id": "missing-resilience-patterns",
    "system": "reliability",
    "description": "Detect missing resilience patterns",
    "severity": "risk",
    "scope": { "files": ["**/*.js", "**/*.ts"] },
    "rule": {
      "type": "pattern",
      "condition": {
        "pattern": "axios\\.get|axios\\.post"
      },
      "message": "Missing resilience patterns detected"
    }
  }
]