[
  {
    "id": "global-state-detection",
    "system": "security",
    "description": "Detect global mutable state patterns",
    "severity": "block",
    "scope": { "files": ["**/*.js", "**/*.ts"] },
    "rule": {
      "type": "pattern",
      "condition": {
        "pattern": "GLOBAL_|let GLOBAL_|var GLOBAL_"
      },
      "message": "Global state violation detected"
    }
  },
  {
    "id": "hardcoded-secrets-detection",
    "system": "security",
    "description": "Detect hardcoded secrets and passwords",
    "severity": "block",
    "scope": { "files": ["**/*.js", "**/*.ts"] },
    "rule": {
      "type": "pattern",
      "condition": {
        "pattern": "password|secret|api.*key|jwt.*key"
      },
      "message": "Hardcoded secret detected"
    }
  },
  {
    "id": "database-access-violation",
    "system": "architecture",
    "description": "Detect improper database access patterns",
    "severity": "block",
    "scope": { "files": ["**/*.js", "**/*.ts"] },
    "rule": {
      "type": "pattern",
      "condition": {
        "pattern": "createConnection|mysql\\.connect|DB_CONNECTION"
      },
      "message": "Improper database access pattern detected"
    }
  }
]